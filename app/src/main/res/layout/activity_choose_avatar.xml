<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_provisional_sky">

    <ScrollView
        android:id="@+id/scrollViewPrincipal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elige un avatar"
                android:textSize="36sp"
                android:textColor="@color/secondary_cream"
                android:fontFamily="@font/accasia"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="40dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewInstrucciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/secondary_cream"
                app:cardCornerRadius="10dp"
                android:layout_margin="24dp">

                <TextView
                    android:id="@+id/textViewInstrucciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Presiona sobre el avatar y luego en 'A Jugar' para comenzar la partida."
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="16dp"/>
            </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/linearLayoutAvatares"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_margin="6dp">
                        <ImageView
                            android:id="@+id/avatarOsoHormiguero"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/img_player1"
                            android:contentDescription="Oso hormiguero"
                            android:background="@drawable/bg_avatar_selector"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Oso hormiguero"
                            android:textSize="18sp"
                            android:textColor="@color/secondary_cream"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginStart="16dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_margin="6dp">
                        <ImageView
                            android:id="@+id/avatarJaguar"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/img_player2"
                            android:contentDescription="Jaguar"
                            android:background="@drawable/bg_avatar_selector"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jaguar"
                            android:textSize="18sp"
                            android:textColor="@color/secondary_cream"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginStart="16dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_margin="6dp">
                        <ImageView
                            android:id="@+id/avatarTucan"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/img_player3"
                            android:contentDescription="Tucán"
                            android:background="@drawable/bg_avatar_selector"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tucán"
                            android:textSize="18sp"
                            android:textColor="@color/secondary_cream"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginStart="16dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_margin="6dp">
                        <ImageView
                            android:id="@+id/avatarPerezoso"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/img_player4"
                            android:contentDescription="Perezoso"
                            android:background="@drawable/bg_avatar_selector"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Perezoso"
                            android:textSize="18sp"
                            android:textColor="@color/secondary_cream"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginStart="16dp"/>
                    </LinearLayout>
                </LinearLayout>

            <Button
                android:id="@+id/buttonAJugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A Jugar"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"
                app:backgroundTint="@color/secondary_cream_transparent"
                app:cornerRadius="10dp"
                android:layout_marginTop="40dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
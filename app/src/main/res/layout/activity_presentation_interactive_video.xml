<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_provisional_sun"
    android:fontFamily="@font/poppins_medium"
    tools:context="com.smartPackaging.selvawa.interactiveVideo.PresentationInteractiveVideo">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <Button
                android:id="@+id/buttonIrAPaginaPrincipal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/secondary_cream_transparent"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/ir_a_la_pagina_principal"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="10dp" />

            <TextView
                android:id="@+id/textViewSelvawa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/accasia"
                android:textAllCaps="true"
                android:text="@string/app_name"
                android:textColor="@color/secondary_cream"
                android:textSize="56sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewPresentacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/secondary_cream"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/textViewTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Historia detrás de los productos"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/textViewDescripcion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Conoce de cerca a quienes hacen posible cada alimento.\nTú eliges el camino.\nDuración: 5-10 minutos."
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:gravity="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imageViewBearPeeking"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginTop="-40dp"
                android:contentDescription="@string/selvawa_mascot"
                android:src="@drawable/img_bear_peeking" />

            <ImageView
                android:id="@+id/imageViewPlay"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_play_circle"
                android:contentDescription="Icono de play"
                app:tint="@color/secondary_cream" />

            <ImageView
                android:id="@+id/imageViewWarning"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_alert_circle"
                android:contentDescription="Icono de advertencia"
                app:tint="@color/secondary_cream" />

            <TextView
                android:id="@+id/textViewAdvertencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/poppins_medium"
                android:text="¡Este video tiene elementos interactivos! Toca cuando se te indique."
                android:textColor="@color/secondary_cream"
                android:textSize="16sp"
                android:gravity="center" />

            <LinearLayout
                android:id="@+id/layoutRedesSociales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/textViewRedesSociales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/redes_sociales"
                    android:textColor="@color/secondary_cream"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:id="@+id/linearLayoutRedesSociales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewFacebook"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="8dp"
                        android:contentDescription="@string/facebook_icon"
                        android:src="@drawable/ic_facebook"
                        app:tint="@color/secondary_cream" />

                    <ImageView
                        android:id="@+id/imageViewInstagram"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="8dp"
                        android:contentDescription="@string/instagram_icon"
                        android:src="@drawable/ic_instagram"
                        app:tint="@color/secondary_cream" />

                    <ImageView
                        android:id="@+id/imageViewWebsite"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="8dp"
                        android:contentDescription="@string/website_icon"
                        android:src="@drawable/ic_website"
                        app:tint="@color/secondary_cream" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>